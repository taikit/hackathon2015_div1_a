<% if @ankle.image? %>
<%= image_tag @ankle.image.url %>
<%= form_for(@comment) do |f| %>

<%= f.hidden_field :ankle_id, :value => @comment.ankle_id %>
<%= f.label :comment %>
<%= f.text_field :body %>
<%= f.submit class: "btn btn-large btn-primary"%>
<% end %>

<br>
<% @ankle_list.comments.each do |comment| %>

<%= link_to user_path do%>
  <% image_tag comment.user.ankles.where(:is_avatar => true).first.image_url, class: "CommentImg" %>
<% end %>

<%= comment.body %><br>
<% end %>
<% else %>
　　<%= image_tag 'noimage.gif' %> <br>
<% end %>

<br>

<%= link_to 'Back', ankles_path %>
