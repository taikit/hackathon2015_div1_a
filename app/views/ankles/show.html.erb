<p id="notice"><%= notice %></p>


<p>
<%= @ankle.id %>
</p>


<% if @ankle.image? %>
<%= image_tag @ankle.image.thumb.url %>

<%= form_for(@comment) do |f| %>

<%= f.hidden_field :ankle_id, :value => @comment.ankle_id %>
<%= f.label :comment %>
<%= f.text_field :body %>
<%= f.submit class: "btn btn-large btn-primary"%>
<% end %>


<% @ankle_list.comments.each do |comment| %>
<%= image_tag comment.user.ankles.where(:is_avatar => true).first.image.thumb.url, class: "CommentImg" %>
<%= comment.body %><br>
<% end %>
<% else %>
　　<%= image_tag 'noimage.gif' %> <br>
<% end %>

<br>

<%= link_to 'Back', ankles_path %>
