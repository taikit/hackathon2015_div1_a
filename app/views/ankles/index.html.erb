<h1>Ankle's Ranking!!!</h1>

<table class="box-center">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ankles.order('score').each_with_index do |ankle, count| %>
      <tr>
        <td id='rank'><%= count+1 %></td>
        <td><%= link_to image_tag(ankle.image.url), ankle %></td>
        <td>Score:<%= ankle.score %>
        <br><%= 'Win:' %>
        <br><%= 'Lose:' %>
        <br><%= link_to 'Destroy', ankle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Now On Battle!', new_battle_path, class: "footerlink" %>
