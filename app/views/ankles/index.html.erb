<h1>Ankle's Ranking!!!</h1>

<table class="box-center">
  <thead>
    <tr>
      <th><h2 style="font-size: 30px;">Top Ankles!!!</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ankles.each do |ankle| %>
      <tr>
        <td><%= link_to image_tag(ankle.image.thumb.url), ankle %></td>
        <td>Score:<%= ankle.score %>
        <br>Win:<%= ankle.win_battles.count %>
        <br>Lose:<%= ankle.lose_battles.count %>
        <br><%= link_to 'Destroy', ankle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ankle', new_ankle_path, class: "footerlink" %>
