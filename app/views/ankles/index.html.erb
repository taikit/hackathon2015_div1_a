<h1>Ankle's Ranking!!!</h1>

<table class="box-center">
  <thead>
    <tr>
      <th>Top Ankles!!!</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ankles.each do |ankle| %>
      <tr>
        <td><%= link_to image_tag(ankle.image.thumb.url), ankle %></td>
        <td>Score:<%= ankle.score %>
        <br><%= 'Win:' %>
        <br><%= 'Lose:' %>
        <br><%= link_to 'Destroy', ankle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ankle', new_ankle_path %>
